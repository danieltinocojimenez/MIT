import random

# Definir una lista de preguntas y respuestas
preguntas_respuestas = {
    "¿Cuál es la capital de Francia?": "París",
    "¿Cuál es el río más largo del mundo?": "Amazonas",
    "¿Quién escribió 'El Quijote'?": "Miguel de Cervantes",
    "¿En qué año llegó Cristóbal Colón a América?": "1492"
}

# Función para seleccionar una pregunta al azar
def seleccionar_pregunta():
    pregunta = random.choice(list(preguntas_respuestas.keys()))
    return pregunta, preguntas_respuestas[pregunta]

# Función principal del juego
def jugar():
    print("¡Bienvenido al juego de preguntas!")
    puntaje = 0
    num_preguntas = 3  # Puedes ajustar el número de preguntas aquí

    for _ in range(num_preguntas):
        pregunta, respuesta = seleccionar_pregunta()
        print("\nPregunta:", pregunta)
        usuario_respuesta = input("Respuesta: ")

        if usuario_respuesta.lower() == respuesta.lower():
            print("¡Respuesta correcta!")
            puntaje += 1
        else:
            print("Respuesta incorrecta. La respuesta correcta es:", respuesta)

    print("\nFin del juego.")
    print("Tu puntaje final es:", puntaje, "de", num_preguntas)

if __name__ == "__main__":
    jugar()
